<h1><%= @topic.name %></h1>

  <% if user_is_authorized_for_updating_topics? %>
    <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
  <% end %>
  <% if user_is_authorized_for_deleting_topics? %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  <% end %>
  <div class="row">
    <div class="col-md-8">
      <p class="lead">
      <%= render partial: "labels/list",  locals: { labels: @topic.labels } %>
      <br />
      <%= @topic.description %>
      </p>
      <%= render partial: "post", collection: @topic.posts %>
    </div>
  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    </div>
      <% end %>
    </div>



<ul>
  <% @topic.sponsored_posts.each do |s| %>
    <li><%= s.title %></li>
    <%= link_to s.title, topic_sponsored_post_path(@topic, s) %>
  <% end %>
</ul>

<h1>SponsoredPost#new</h1>
<div class="row">

  <div class="col-md-8">
    <%= form_for [@sponsored_post.topic, @sponsored_post] do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
      </div>
      <div class="form-group">
        <%= f.label :bod %>
        <%= f.text_field :bod, class: 'form-control', placeholder: "Enter Price" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
